    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.16" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\libs\H.XamlExtensions.Avalonia\H.XamlExtensions.Avalonia.csproj" />
  </ItemGroup>

</Project>